<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center" id="top-bar">
      <h1>HAM-BURGER</h1>
    </div>
    <div class="col-sm-6 text-center" class="task">
      <div class="row">

        {{#each burger_data}}
        {{#unless this.devoured}}
        <div class="col-sm-9 text-center">

          <pre>{{this.id}}. {{this.burger_name}}</pre>
        </div>

        <div class="col-sm-3 text-center">
          <form methods="POST" action="/burger/update?_method=PUT" class="button-size">
            <input type="hidden" name="burger_id" type="text" value={{this.id}}><br>
            <button type="submit" class="btn btn-default"> Devour it</button>
          </form>

        </div>

        {{/unless}}
        {{/each}}

      </div>

    </div>

  </div>

</div>